        <TextBlock HorizontalAlignment="Left" Margin="330,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"><Run Language="pt-br" Text="Usuário"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="330,176,0,306" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"><Run Language="pt-br" Text="[user db]"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="330,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="24"><Run Language="pt-br" Text="Conexão"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="330,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"><Run Language="pt-br" Text="[conn info]"/></TextBlock>
        <Button Content="Salvar" Margin="215,330,215,0" VerticalAlignment="Top" Click="SaveName_Click"/>

    </Grid>
</Page>
