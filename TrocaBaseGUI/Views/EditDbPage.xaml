      Title="FormularioPage"
      Height="500" Width="550">

    <Grid Background="White">
        <Rectangle Margin="80,80,80,122" Stroke="Black"/>
        <TextBlock FontSize="16" FontWeight="SemiBold" Margin="215,95,215,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38"><Run Language="pt-br" Text="Renomear base"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="100,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="15"><Run Language="pt-br" Text="Nome da base"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <!--<TextBox x:Name = "RenameInput" HorizontalAlignment="Left" Margin="100,176,0,306" TextWrapping="Wrap" Width="120"/>-->
        <TextBox x:Name = "renameInput" HorizontalAlignment="Left" Margin="100,176,0,306" TextWrapping="Wrap" Width="120"/>
