<Window x:Class="TrocaBaseGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrocaBaseGUI"
        mc:Ignorable="d"
        Title="Trocabase 1.0" Height="500" Width="550"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10,0,0,0">
        <Button Content="Aplicar e Fechar" Click="CloseApp_Click" Height="33" Margin="194,410,194,0" VerticalAlignment="Top" RenderTransformOrigin="0.435,0.608"/>
        <TabControl Margin="80,80,80,79">
            <TabItem Header="Local">
                <Grid Background="#FFE5E5E5" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="299*"/>
                        <ColumnDefinition Width="75*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="lstTodosBancos"
         Grid.ColumnSpan="2"
         Margin="0,1,0,-1"
         ItemsSource="{Binding ListaDeBancos}"
         MouseDoubleClick="TrocarBase_MouseDoubleClick" RenderTransformOrigin="0.5,0.5" Width="Auto"
         HorizontalAlignment="Stretch"
         VerticalAlignment="Stretch"
         BorderThickness="0">
                        <ListBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="0.152"/>
                                <RotateTransform/>
                                <TranslateTransform Y="0.497"/>
                            </TransformGroup>
                        </ListBox.RenderTransform>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <!-- Name -->
                                        <ColumnDefinition Width="70" />
                                        <!-- DbType -->
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding DbType}" VerticalAlignment="Center" Foreground="Gray" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Server"
                     BorderThickness="0">
                <Grid Background="#FFE5E5E5" Height="267" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="16*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Name="lstSQLServerBancos" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
        </TabControl>
        <RadioButton Content="Todos" Checked="RadioButton_Checked" IsChecked="True" HorizontalAlignment="Left" Margin="80,42,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Oracle" Checked="RadioButton_Checked" HorizontalAlignment="Left" Margin="150,42,0,0" VerticalAlignment="Top" />
        <RadioButton Content="SQL Server" Checked="RadioButton_Checked" HorizontalAlignment="Left" Margin="220,42,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
