<Page x:Class="TrocaBaseGUI.Views.EditDbPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="FormularioPage"
      Height="500" Width="550" >

    <Grid Background="Transparent" >
        <Rectangle Margin="80,80,80,75" Stroke="#411e5a" RadiusX="5" RadiusY="5"/>

        <!--<Image Source="/Assets/edit.png" HorizontalAlignment="Left" Height="60" Margin="20,17,0,0" VerticalAlignment="Top" Width="55"/>-->
        <TextBlock HorizontalAlignment="Left" Foreground="#411e5a" FontSize="30" FontWeight="Medium" Margin="90,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" Height="45"><Run Language="pt-br" Text="Edição"/><LineBreak/><Run Language="pt-br"/>
            <TextBlock.Effect>
                <DropShadowEffect Color="#B3B3B3"
                          Direction="-25"
                          ShadowDepth="1"
                          BlurRadius="5"
                          Opacity="0.3"/>
            </TextBlock.Effect>
        </TextBlock>

        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="110,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="15"><Run Text="Nome(Apenas Visualização"/><Run Language="pt-br" Text=")"/><LineBreak/><Run Text=")"/></TextBlock>
        <TextBox x:Name = "nameInput" TextChanged="nameInput_TextChanged" HorizontalAlignment="Left" Margin="110,130,0,352" TextWrapping="Wrap" Width="120">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="110,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Height="26"><Run Language="pt-br" Text="Server"/><LineBreak/><Run Language="pt-br"/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name = "serverInput" TextChanged="serverInput_TextChanged" HorizontalAlignment="Left" Margin="110,205,0,277" TextWrapping="Wrap" Width="120">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A6A5A4"/>
                                        <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="110,245,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"><Run Language="pt-br" Text="Usuário Oracle"/></TextBlock>
        <TextBox x:Name = "userInput" IsEnabled="False" TextChanged="userInput_TextChanged" HorizontalAlignment="Left" Margin="110,267,0,215" TextWrapping="Wrap" Width="120">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A6A5A4"/>
                                        <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock x:Name = "instDbNameInputTXT" Text="Instância/Nome da Base" Foreground="#411e5a" HorizontalAlignment="Left" Margin="320,245,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167" Height="17"></TextBlock>
        <TextBox x:Name = "instDbNameInput" TextChanged="instDbNameInput_TextChanged" Margin="320,267,110,215" TextWrapping="Wrap">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A6A5A4"/>
                                        <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="310,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Height="15"><Run Language="pt-br" Text="SQL/Oracle"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <StackPanel Orientation="Horizontal" Margin="284,130,70,348">
            <StackPanel.Resources>
                <Style TargetType="RadioButton">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RadioButton">
                                <BulletDecorator Background="Transparent">
                                    <!-- Círculo do RadioButton -->
                                    <BulletDecorator.Bullet>
                                        <Border x:Name="OuterCircle"
                                        Width="14" Height="14"
                                        CornerRadius="7"
                                        BorderThickness="2"
                                        BorderBrush="#411e5a"
                                        Background="#f5f4f3">
                                            <Ellipse x:Name="InnerCircle"
                                             Fill="Transparent"
                                             Margin="2"/>
                                        </Border>
                                    </BulletDecorator.Bullet>
                                    <ContentPresenter VerticalAlignment="Center"
                                              Margin="4,0,0,0"/>
                                </BulletDecorator>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="OuterCircle" Property="BorderBrush" Value="#411e5a"/>
                                        <Setter TargetName="InnerCircle" Property="Fill" Value="#411e5a" />
                                    </Trigger>

                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="OuterCircle" Property="BorderBrush" Value="#6E3299"/>
                                    </Trigger>

                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="OuterCircle" Property="BorderBrush" Value="#A6A5A4"/>
                                        <Setter TargetName="InnerCircle" Property="Fill" Value="#A6A5A4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>
            <RadioButton x:Name="rbOracle" Content="Oracle" IsTabStop="False" Checked="rb_Checked" Foreground="#411e5a" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="rbSqlServer" Content="SQL Server" IsTabStop="False" Checked="rb_Checked" HorizontalAlignment="Left" Foreground="#411e5a" Margin="25,0,0,0" VerticalAlignment="Top"/>

        </StackPanel>
        <Button Content="🡨" Click="Return_Click" IsTabStop="False" ToolTip="Voltar" Foreground="#f5f4f3" FontSize="22" FontWeight="Bold" BorderBrush="Transparent" Background="Transparent" Margin="9,77,517,0" VerticalAlignment="Top" Height="27">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}" Margin="0,1,-3,-3">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="TextElement.Foreground" Value="#dc9710"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="TextElement.FontSize" Value="21"/>
                            <Setter TargetName="Border" Property="TextElement.Foreground" Value="#dc9710"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="SaveDatabaseButton" Content="Salvar" Click="SaveDatabaseButton_Click" IsTabStop="False" BorderThickness="2" Foreground="#411e5a" BorderBrush="#411e5a" Background="#f5f4f3" Margin="110,357,320,115">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#5C2A80"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#D9D8D7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="ClearButton" Content="Limpar" Click="ClearButton_Click" IsTabStop="False" BorderThickness="2" Foreground="#411e5a" BorderBrush="#411e5a" Background="#f5f4f3" Margin="320,357,110,115">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#5C2A80"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#D9D8D7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Page>
