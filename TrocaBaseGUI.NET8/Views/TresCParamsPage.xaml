<Page x:Class="TrocaBaseGUI.Views.TresCParamsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrocaBaseGUI.Views"
      mc:Ignorable="d" 
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Height="500" Width="550"
      Title="TresCParamsPage">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="427"/>
        </Grid.RowDefinitions>
        <CheckBox x:Name="loginCheckbox" BorderBrush="#411e5a" Background="#f5f4f3" IsChecked="{Binding appState.ServerParams.DefaultLoginCheckbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Click="loginCheckbox_Checked" Content="CheckBox" HorizontalAlignment="Right" Margin="0,66,460,0" Grid.Row="1" VerticalAlignment="Top" Width="15" Height="15"/>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" Height="17" Grid.Row="1"><Run Text="Login Padrão"/><Run Language="pt-br" Text=":"/><LineBreak/><Run Language="pt-br"/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="loginPadrao" TextChanged="loginPadrao_TextChanged" Text="{Binding Conexao3Camadas.DefaultLogin}" Foreground="Black" FontSize="11" Padding="1, 0" Margin="195,66,205,343" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A6A5A4"/>
                                        <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <CheckBox x:Name="senhaCheckbox" BorderBrush="#411e5a" Background="#f5f4f3" IsChecked="{Binding appState.ServerParams.DefaultPasswordCheckbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Click="senhaCheckbox_Checked" Content="CheckBox" HorizontalAlignment="Left" Margin="75,96,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Height="17" Grid.Row="1"><Run Language="pt-br" Text="Senha"/><Run Text=" Padrão"/><Run Text=":"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="senhaPadrao" TextChanged="senhaPadrao_TextChanged" Text="{Binding Conexao3Camadas.DefaultPassword}" Foreground="Black" FontSize="11" Padding="1, 0" Margin="195,96,205,313" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"   
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A6A5A4"/>
                                        <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <CheckBox x:Name="editorCheckbox" BorderBrush="#411e5a" Background="#f5f4f3" IsChecked="{Binding appState.ServerParams.EditorCheckbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Click="editorCheckbox_Checked" Content="CheckBox" HorizontalAlignment="Left" Margin="75,136,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Height="17" Grid.Row="1"><Run Language="pt-br" Text="Editor de Texto:"/></TextBlock>
        <TextBox x:Name="editorTexto" TextChanged="editorTexto_TextChanged" Text="{Binding Conexao3Camadas.TextEditorPath}" Foreground="Black" FontSize="11" Padding="1, 0" Margin="195,136,205,273" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"   
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A6A5A4"/>
                                        <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <CheckBox x:Name="updateFolderCheckbox" BorderBrush="#411e5a" Background="#f5f4f3" IsChecked="{Binding appState.ServerParams.DirUpdateCheckbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Click="updateFolderCheckbox_Checked" Content="CheckBox" HorizontalAlignment="Left" Margin="75,166,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Height="17" Grid.Row="1"><Run Language="pt-br" Text="Dir. Atualização:"/></TextBlock>
        <TextBox x:Name="updateFolder" Text="{Binding Conexao3Camadas.UpdateFolder}" TextChanged="updateFolder_TextChanged" Foreground="Black" FontSize="11" Padding="1, 0" Margin="195,166,205,243" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A6A5A4"/>
                                        <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <CheckBox x:Name="ultMenuWebCheckbox" BorderBrush="#411e5a" Background="#f5f4f3" Click="ultMenuWebCheckbox_Checked" IsChecked="{Binding Conexao3Camadas.UseWebMenu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="CheckBox" HorizontalAlignment="Left" Margin="75,206,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="102" Height="16" Grid.Row="1" Text="Utiliza Menu Web"/>

        <Button x:Name="txtEditorPathBtn" Click="SelectTextEditorPath_Click" IsEnabled="{Binding appState.ServerParams.EditorCheckbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="16" HorizontalAlignment="Left" Margin="348,133,0,0" VerticalAlignment="Top" Height="21" Width="20" Background="Transparent" RenderTransformOrigin="0.511,0.257" Grid.Row="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                    Background="{TemplateBinding Background}"
                    CornerRadius="5"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="0">
                        <ContentPresenter x:Name="contentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"
                            TextElement.Foreground="{TemplateBinding Foreground}"
                            TextElement.FontSize="{TemplateBinding FontSize}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#94ADB3"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.FontSize" Value="15"/>
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#7F9599"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <Button Content="📁" Foreground="#411e5a" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Height="21" Width="20">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border"
                            Background="Transparent"
                            CornerRadius="5"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0">
                            <ContentPresenter x:Name="contentPresenter"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"
                                TextElement.Foreground="{TemplateBinding Foreground}"
                                TextElement.FontSize="{TemplateBinding FontSize}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#7737A6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="contentPresenter" Property="TextElement.FontSize" Value="15"/>
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#411e5a"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#BFBEBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Button>

        <Button x:Name="updateFolderPathBtn" Click="SelectUpdateFolderPath_Click" IsEnabled="{Binding appState.ServerParams.DirUpdateCheckbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="#788d91" FontSize="16" HorizontalAlignment="Left" Margin="348,163,0,0" VerticalAlignment="Top" Height="19" Width="20" BorderBrush="#2a353a"  Background="Transparent" RenderTransformOrigin="0.511,0.257" Grid.Row="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                    Background="{TemplateBinding Background}"
                    CornerRadius="5"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="0">
                        <ContentPresenter x:Name="contentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"
                            TextElement.Foreground="{TemplateBinding Foreground}"
                            TextElement.FontSize="{TemplateBinding FontSize}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#94ADB3"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="contentPresenter" Property="TextElement.FontSize" Value="15"/>
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#7F9599"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <Button Content="📁" Foreground="#411e5a" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Height="24" Width="20" BorderBrush="#2a353a"  Background="#101e24">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border"
                            Background="Transparent"
                            CornerRadius="5"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0">
                            <ContentPresenter x:Name="contentPresenter"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"
                                TextElement.Foreground="{TemplateBinding Foreground}"
                                TextElement.FontSize="{TemplateBinding FontSize}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#7737A6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="contentPresenter" Property="TextElement.FontSize" Value="15"/>
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#411e5a"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#BFBEBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Button>
        <Button Content="Editar Portas" Click="SetPortsButton_Click" BorderThickness="2" Foreground="#411e5a" BorderBrush="#411e5a" Background="#f5f4f3" Margin="100,317,310,80" Grid.Row="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#5C2A80"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#D9D8D7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <CheckBox x:Name="useRedirectCheckbox" BorderBrush="#411e5a" Background="#f5f4f3" Click="useRedirectCheckbox_Checked" IsChecked="{Binding Conexao3Camadas.UseRedirect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="CheckBox" HorizontalAlignment="Left" Margin="75,246,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,245,0,165" TextWrapping="Wrap" Width="118" Grid.Row="1" Text="Utiliza Redirecionador"/>

        <TextBox x:Name="redirectPort" TextChanged="redirectPort_TextChanged" Text="{Binding Conexao3Camadas.RedirectPort}" TextAlignment="Center" MaxLength = "5" Foreground="Black" FontSize="11" Margin="227,245,275,164" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A6A5A4"/>
                                        <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBlock FontSize="9" HorizontalAlignment="Left" Foreground="#411e5a" Margin="222,218,0,183" Grid.Row="1" TextWrapping="Wrap" Text="       Porta Redirecionador" Width="67"/>
        <Button Content="Atualizar Redirecionador" Click="updateRedirectorFile_Click" BorderThickness="2" Foreground="#411e5a" BorderBrush="#411e5a" Background="#f5f4f3" Margin="310,317,100,80" Grid.Row="1">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#5C2A80"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#D9D8D7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBox x:Name="verifierPort" TextChanged="verifierPort_TextChanged" Text="{Binding Conexao3Camadas.VerifierPort}" TextAlignment="Center" MaxLength = "5" Foreground="Black" FontSize="11" Padding="1, 0" Margin="297,245,205,164" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#A6A5A4"/>
                                        <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBlock FontSize="9" HorizontalAlignment="Left" Foreground="#411e5a" Margin="300,218,0,183" Grid.Row="1" TextWrapping="Wrap" Text="    Porta Verificador" Width="43"/>
        <TextBox x:Name="dbServer" TextChanged="dbServer_TextChanged" Text="{Binding Conexao3Camadas.DbServer}" Foreground="Black" FontSize="11" Padding="1, 0" Margin="200,286,205,123" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="Border"
                                    Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#18262b"/>
                                        <Setter TargetName="Border" Property="Background" Value="#152226"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="75,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="17" Grid.Row="1"><Run Text="Server Redirecionador"/><Run Language="pt-br" Text=":"/><LineBreak/><Run Language="pt-br"/><LineBreak/><Run/></TextBlock>
    </Grid>
</Page>
