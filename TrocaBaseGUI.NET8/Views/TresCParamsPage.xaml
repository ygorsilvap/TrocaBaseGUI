<Page x:Class="TrocaBaseGUI.Views.TresCParamsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrocaBaseGUI.Views"
      mc:Ignorable="d" 
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Height="500" Width="550"
      Title="TresCParamsPage">

    <Grid Background="#101e24">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="427"/>
        </Grid.RowDefinitions>
        <!--<Border BorderThickness="1" BorderBrush="#2a353a" Margin="60,22,60,70" CornerRadius="0, 0, 5, 5" Grid.Row="1"/>-->
        <Button Content="Editar Portas Server" Click="ServerPortEditButton_Click" Foreground="#f5f4f3" BorderBrush="#2a353a" Background="#101e24" Margin="82,287,348,110" Grid.Row="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#18262b"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#2a353a"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <CheckBox x:Name="ultRedirecionadorCheckbox" Content="CheckBox" HorizontalAlignment="Left" Margin="75,34,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="100,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="17" Grid.Row="1"><Run Language="pt-br" Text="Copiar"/><Run Text=" parâmetros do 2 Camadas"/><LineBreak/><Run/></TextBlock>
        <!--<TextBox HorizontalAlignment="Left" Margin="100,236,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>-->
        <!--<TextBox x:Name="OraclePassword" FontSize="11" Margin="300,235,100,0" TextWrapping="Wrap" Text="{Binding OracleConnection.Password}" VerticalAlignment="Top"/>-->
        <CheckBox x:Name="loginCheckbox" Checked="loginCheckbox_Checked" Unchecked="loginCheckbox_Checked" Content="CheckBox" HorizontalAlignment="Left" Margin="75,66,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="100,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" Height="17" Grid.Row="1"><Run Text="Login Padrão"/><Run Language="pt-br" Text=":"/><LineBreak/><Run Language="pt-br"/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="loginPadrao" BorderThickness="1" Foreground="#f5f4f3" FontSize="11" Padding="1, 0" Margin="195,66,205,343" Text="" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border x:Name="Border"
                                    Background="#19262c"  
                                        BorderBrush="#2a353a"  
                                        BorderThickness="1"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#18262b"/>
                                        <Setter TargetName="Border" Property="Background" Value="#152226"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <CheckBox x:Name="senhaCheckbox" Checked="senhaCheckbox_Checked" Unchecked="senhaCheckbox_Checked" Content="CheckBox" HorizontalAlignment="Left" Margin="75,96,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="100,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Height="17" Grid.Row="1"><Run Language="pt-br" Text="Senha"/><Run Text=" Padrão"/><Run Text=":"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="senhaPadrao" BorderThickness="1" Foreground="#f5f4f3" FontSize="11" Padding="1, 0" Margin="195,96,205,313" Text="" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="Border"
                                    Background="#19262c"  
                                        BorderBrush="#2a353a"  
                                        BorderThickness="1"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#18262b"/>
                                        <Setter TargetName="Border" Property="Background" Value="#152226"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <CheckBox x:Name="editorCheckbox" Checked="editorCheckbox_Checked" Unchecked="editorCheckbox_Checked" Content="CheckBox" HorizontalAlignment="Left" Margin="75,136,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="100,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Height="17" Grid.Row="1"><Run Language="pt-br" Text="Editor de Texto:"/></TextBlock>
        <TextBox x:Name="editorTexto" BorderThickness="1" Foreground="#f5f4f3" FontSize="11" Padding="1, 0" Margin="195,136,205,273" Text="" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="Border"
                                    Background="#19262c"  
                                        BorderBrush="#2a353a"  
                                        BorderThickness="1"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#18262b"/>
                                        <Setter TargetName="Border" Property="Background" Value="#152226"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <CheckBox x:Name="dirCheckbox" Checked="dirCheckbox_Checked" Unchecked="dirCheckbox_Checked" Content="CheckBox" HorizontalAlignment="Left" Margin="75,166,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="100,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Height="17" Grid.Row="1"><Run Language="pt-br" Text="Dir. Atualização:"/></TextBlock>
        <TextBox x:Name="dirAtualizacao" BorderThickness="1" Foreground="#f5f4f3" FontSize="11" Padding="1, 0" Margin="195,166,205,243" Text="" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border x:Name="Border"
                                    Background="#19262c"  
                                        BorderBrush="#2a353a"  
                                        BorderThickness="1"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="0" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#18262b"/>
                                        <Setter TargetName="Border" Property="Background" Value="#152226"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <CheckBox x:Name="ultMenuWebCheckbox" Checked="ultMenuWebCheckbox_Checked" Unchecked="ultMenuWebCheckbox_Checked" Content="CheckBox" HorizontalAlignment="Left" Margin="75,206,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="100,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="102" Height="16" Grid.Row="1" Text="Utiliza Menu Web"/>

        <Button Content="Editar Portas Client" Click="ClientPortEditButton_Click" Foreground="#f5f4f3" BorderBrush="#2a353a" Background="#101e24" Margin="348,287,82,110" Grid.Row="1">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#18262b"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#2a353a"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <CheckBox x:Name="ultRedirecionadorCheckbox_Copy" Content="CheckBox" HorizontalAlignment="Left" Margin="75,256,0,0" Grid.Row="1" VerticalAlignment="Top" Width="15"/>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="100,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" Height="17" Grid.Row="1" Text="Utiliza Redirecionador"/>
    </Grid>
</Page>
