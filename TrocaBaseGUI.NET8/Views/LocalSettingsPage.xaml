<Page x:Class="TrocaBaseGUI.Views.LocalSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="FormularioPage"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Height="500" Width="550">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="228"/>
        </Grid.RowDefinitions>
        <!--<Border BorderThickness="1" BorderBrush="white" Margin="60,22,60,70" CornerRadius="0, 0, 5, 5" Grid.Row="1" Grid.RowSpan="2" />-->

        <TextBox x:Name="sqlServerServer" Foreground="Black" FontSize="11" Padding="1, 0" Margin="100,102,300,79" Text="{Binding LocalSQLServerConnection.Server}" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="#f5f4f3"  
                                        BorderBrush="#37194D"   
                                        BorderThickness="1.5"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <!--<TextBox HorizontalAlignment="Left" Margin="100,236,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>-->
        <TextBox x:Name="OracleServer" Foreground="black" FontSize="11" Margin="300,102,100,79" TextWrapping="Wrap" Text="{Binding LocalOracleConnection.Server}" Width="150" Padding="1, 0" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="#f5f4f3"  
                                        BorderBrush="#37194D"   
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <!--<TextBox x:Name="OraclePassword" FontSize="11" Margin="300,235,100,0" TextWrapping="Wrap" Text="{Binding OracleConnection.Password}" VerticalAlignment="Top"/>-->
        <PasswordBox x:Name="OraclePassword" Background="#19262c" BorderBrush="#2a353a" Foreground="black" FontSize="11" Margin="300,162,100,19" Grid.Row="1">
            <PasswordBox.Style>
                <Style TargetType="PasswordBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="PasswordBox">
                                <Border Background="#f5f4f3"  
                                        BorderBrush="#37194D"   
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </PasswordBox.Style>
        </PasswordBox>

        <Border Background="#f5f4f3" BorderBrush="#37194D" BorderThickness="2" CornerRadius="5" 
        Margin="390,128,100,83" Grid.Row="2">
            <TextBox x:Name="OraclePort" 
             TextAlignment="Center"
             Background="Transparent" 
             Foreground="black" 
             FontSize="11" 
             TextWrapping="Wrap" 
             MaxLength="5" 
             Text="{Binding LocalOracleConnection.Port}" 
             BorderThickness="0"/>
        </Border>
        <Button Content="Testar Conexão" Click="SqlServerTestConn_Click" BorderThickness="2" Foreground="#411e5a" BorderBrush="#411e5a" Background="#f5f4f3" Margin="120,65,310,135" Grid.Row="2">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#5C2A80"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#D9D8D7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Testar Conexão" Click="OracleTestConn_Click" BorderThickness="2" Foreground="#411e5a" BorderBrush="#411e5a" Background="#f5f4f3" Margin="310,65,120,135" Grid.Row="2">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#5C2A80"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#D9D8D7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="15" Grid.Row="1"><Run Language="pt-br" Text="Servidor"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="300,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"><Run Language="pt-br" Text="Servidor"/></TextBlock>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="300,137,0,38" TextWrapping="Wrap" Width="120" Grid.Row="1"><Run Language="pt-br" Text="Senha"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <!--<TextBlock HorizontalAlignment="Left" Margin="100,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="16"><Run Language="pt-br" Text="Senha"/><LineBreak/><Run Language="pt-br"/></TextBlock>-->
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" Margin="115,37,0,124" TextWrapping="Wrap" Width="120" Grid.Row="1"><Run Language="pt-br" Text="SQL Server"/></TextBlock>
        <TextBlock Foreground="#411e5a" FontSize="18" FontWeight="Bold" Margin="343,37,147,124" TextWrapping="Wrap" Grid.Row="1"><Run Language="pt-br" Text="Oracle"/><LineBreak/><Run Language="pt-br"/></TextBlock>

        <Button Content="🡨" Click="VoltarButton_Click" Foreground="#f5f4f3" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" Margin="13,6,0,166" Width="22" BorderBrush="Transparent"  Background="Transparent" Grid.Row="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}" Margin="0,1,-3,-3">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="TextElement.Foreground" Value="#dc9710"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="TextElement.FontSize" Value="21"/>
                            <Setter TargetName="Border" Property="TextElement.Foreground" Value="#dc9710"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!--<Button Content="Salvar" Click="SalvarButton_Click" Foreground="#f5f4f3" BorderBrush="#2a353a" Background="#101e24" Margin="230,117,230,83" Grid.Row="2">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#18262b"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#2a353a"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>-->
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="390,106,0,106" TextWrapping="Wrap" Grid.Row="2"><Run Language="pt-br" Text="Porta"/></TextBlock>
        <PasswordBox x:Name="SqlServerPassword" Background="#19262c" BorderBrush="#2a353a" Foreground="black" FontSize="11" Margin="100,28,300,182" Grid.Row="2">
            <PasswordBox.Style>
                <Style TargetType="{x:Type PasswordBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type PasswordBox}">
                                <Border Background="#f5f4f3"  
                                        BorderBrush="#37194D"    
                                        BorderThickness="1.5"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                            Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </PasswordBox.Style>
        </PasswordBox>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,5,0,199" TextWrapping="Wrap" Width="120" Grid.Row="2"><Run Language="pt-br" Text="Senha"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <TextBlock Foreground="#999897" HorizontalAlignment="Left" Margin="134,5,0,0" FontStyle="Italic" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="2"><Run Language="pt-br" Text="(Opcional)"/></TextBlock>

        <TextBox x:Name="OracleInstance" Foreground="black" FontSize="11" Margin="300,28,100,182" TextWrapping="Wrap" Text="{Binding LocalOracleConnection.Instance}" Width="150" Grid.Row="2">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border Background="#f5f4f3"  
                                        BorderBrush="#37194D"    
                                        BorderThickness="1.5"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                            Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="300,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="2"><Run Language="pt-br" Text="Instância"/></TextBlock>
        <TextBlock Foreground="#999897" HorizontalAlignment="Left" Margin="348,5,0,0" FontStyle="Italic" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="2"><Run Language="pt-br" Text="(Opcional)"/></TextBlock>
    </Grid>
</Page>

