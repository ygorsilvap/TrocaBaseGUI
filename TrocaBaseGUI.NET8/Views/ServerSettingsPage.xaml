<Page x:Class="TrocaBaseGUI.Views.ServerSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="FormularioPage"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Loaded="ServerPage_Loaded"
      Height="500" Width="550">

    <Grid Background="Transparent">
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="15"><Run Language="pt-br" Text="Servidor"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <TextBox x:Name="SqlServerServer" Foreground="black" FontSize="11" Padding="1, 0" Margin="100,174,300,307" Text="{Binding ServerSQLServerConnection.Server, Mode=TwoWay}">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="#f5f4f3"  
                                        BorderBrush="#411e5a"  
                                        BorderThickness="1.5"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,210,0,266" TextWrapping="Wrap" Width="120"><Run Language="pt-br" Text="Senha"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <TextBox x:Name="SqlServerPassword" TextChanged="SqlServerPassword_TextChanged" Foreground="Black" FontSize="14" FontWeight="ExtraBold" Padding="1, -2" Margin="100,235,300,247" Text="{Binding ServerSQLServerConnection.Password}" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="#f5f4f3"  
                                        BorderBrush="#411e5a"   
                                        BorderThickness="1.5"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="100,277,0,209" TextWrapping="Wrap" Width="120"><Run Language="pt-br" Text="Usuário"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <TextBox x:Name="SqlServerUser" Foreground="black" FontSize="11" Padding="1, 0" Margin="100,300,300,182" Text="{Binding ServerSQLServerConnection.Username, Mode=TwoWay}">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="300,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"><Run Language="pt-br" Text="Servidor"/></TextBlock>
        <TextBox x:Name="OracleServer" Foreground="black" FontSize="11" Margin="300,174,100,307" Text="{Binding ServerOracleConnection.Server, Mode=TwoWay}" Width="150">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="#f5f4f3"  
                                    BorderBrush="#411e5a"  
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="300,210,0,266" TextWrapping="Wrap" Width="120"><Run Language="pt-br" Text="Senha"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <TextBox x:Name="OraclePassword" TextChanged="OraclePassword_TextChanged" Foreground="Black" FontSize="14" FontWeight="ExtraBold" Padding="1, -2" Margin="300,234,100,247" Text="{Binding ServerOracleConnection.Password}" Grid.Row="1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border Background="#f5f4f3"  
                                    BorderBrush="#411e5a"   
                                    BorderThickness="1.5"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="300,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"><Run Language="pt-br" Text="Instância"/></TextBlock>
        <TextBox x:Name="OracleInstance" Foreground="black" FontSize="11" Margin="300,300,100,182" Text="{Binding ServerOracleConnection.Instance, Mode=TwoWay}" Width="150">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border Background="#f5f4f3"  
                                        BorderBrush="#411e5a"  
                                        BorderThickness="1.5"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                            Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" Margin="390,378,0,106" TextWrapping="Wrap"><Run Language="pt-br" Text="Porta"/></TextBlock>
        <Border Background="#f5f4f3" BorderBrush="#37194D" BorderThickness="2" CornerRadius="5" 
                Margin="390,400,100,83" Grid.Row="2">
            <TextBox x:Name="OraclePort" 
             TextAlignment="Center"
             Background="Transparent" 
             Foreground="black" 
             FontSize="11" 
             TextWrapping="Wrap" 
             MaxLength="5" 
             Text="{Binding LocalOracleConnection.Port, Mode=TwoWay}" 
             BorderThickness="0"/>
        </Border>

        <Button Content="Testar Conexão" Click="SqlServerTestConn_Click" IsTabStop="False" BorderThickness="2" Foreground="#411e5a" BorderBrush="#411e5a" Background="#f5f4f3" Margin="120,337,310,135">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#5C2A80"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#D9D8D7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Testar Conexão" Click="OracleTestConn_Click" IsTabStop="False" BorderThickness="2" Foreground="#411e5a" BorderBrush="#411e5a" Background="#f5f4f3" Margin="310,337,120,135">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#EBE9E8"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#5C2A80"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#D9D8D7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Foreground="#411e5a" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" Margin="115,110,0,366" TextWrapping="Wrap" Width="100"><Run Language="pt-br" Text="SQL Server"/></TextBlock>
        <TextBlock Foreground="#411e5a" FontSize="18" FontWeight="Bold" Margin="343,110,147,352" TextWrapping="Wrap"><Run Language="pt-br" Text="Oracle"/><LineBreak/><Run Language="pt-br"/></TextBlock>

    </Grid>
</Page>
