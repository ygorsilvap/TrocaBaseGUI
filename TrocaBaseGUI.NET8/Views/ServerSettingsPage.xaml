<Page x:Class="TrocaBaseGUI.Views.ServerSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="FormularioPage"
      Height="500" Width="550">

    <Grid Background="#101e24">
        <Image Source="/Assets/settings80.png" HorizontalAlignment="Left" Height="50" Margin="15,20,0,0" VerticalAlignment="Top" Width="45"/>
        <TextBlock HorizontalAlignment="Left" Foreground="#f5f4f3" FontSize="26" FontWeight="Medium" Margin="75,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="45"><Run Language="pt-br" Text="Configurações"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <Border BorderThickness="1" BorderBrush="#2a353a" Margin="60,95,60,75" CornerRadius="0, 5, 5, 5"/>
        <TabControl Margin="60,68,369,405" x:Name="TabControl" SelectionChanged="TabControl_SelectionChanged" BorderThickness="0" Background="#101e24">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border
                                Name="Border"
                                Background="#121f24"
                                BorderBrush="#2a353a"
                                BorderThickness="1"
                                CornerRadius="5,5,0,0"
                                Padding="8,4">
                                    <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#18262c"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#2a353a"/>
                                        <Setter Property="Foreground" Value="#f5f4f3"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#18262b"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Local" Foreground="#f5f4f3" Margin="-2,0,2,0" />
            <TabItem Header="Server" Foreground="#f5f4f3" Margin="-2,0,2,0"/>
        </TabControl>
        <TextBox x:Name="sqlServerServer" BorderThickness="1" Foreground="#f5f4f3" FontSize="11" Padding="1, 0" Margin="100,170,300,312" Text="{Binding ServerSQLServerConnection.Server}">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="#19262c"  
                                        BorderBrush="#2a353a"  
                                        BorderThickness="1"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <!--<TextBox HorizontalAlignment="Left" Margin="100,236,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>-->
        <TextBox x:Name="oracleServer" Foreground="#f5f4f3" FontSize="11" Margin="300,170,100,312" Text="{Binding ServerOracleConnection.Server}" Width="150">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="#19262c"  
                                    BorderBrush="#2a353a"  
                                    BorderThickness="1"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <!--<TextBox x:Name="OraclePassword" FontSize="11" Margin="300,235,100,0" TextWrapping="Wrap" Text="{Binding OracleConnection.Password}" VerticalAlignment="Top"/>-->
        <PasswordBox x:Name="OraclePassword" Background="#19262c" BorderThickness="1" BorderBrush="#2a353a" Foreground="#f5f4f3" FontSize="11" Margin="300,230,100,252">
            <PasswordBox.Style>
                <Style TargetType="PasswordBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="PasswordBox">
                                <Border Background="#19262c"  
                                    BorderBrush="#2a353a"  
                                    BorderThickness="1"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </PasswordBox.Style>
        </PasswordBox>

        <TextBox x:Name="oraclePort" Background="#19262c" BorderThickness="1" BorderBrush="#2a353a" Foreground="#f5f4f3" FontSize="11" Margin="390,395,100,88" TextWrapping="Wrap" MaxLength="5" Text="{Binding ServerOracleConnection.Port}"/>

        <Button Content="Testar Conexão" Click="SqlServerTestConn_Click" Foreground="#f5f4f3" BorderBrush="#2a353a" Background="#101e24" Margin="120,332,310,140">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#18262b"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#2a353a"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Testar Conexão" Click="OracleTestConn_Click" Foreground="#f5f4f3" BorderBrush="#2a353a" Background="#101e24" Margin="310,332,120,140">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#18262b"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#2a353a"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Voltar" Click="VoltarButton_Click" Foreground="#f5f4f3" BorderBrush="#2a353a" Background="#101e24" Margin="230,442,230,20" Height="38">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#18262b"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#2a353a"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="100,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="15"><Run Language="pt-br" Text="Servidor"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="300,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"><Run Language="pt-br" Text="Servidor"/></TextBlock>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="300,205,0,271" TextWrapping="Wrap" Width="120"><Run Language="pt-br" Text="Senha"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <!--<TextBlock HorizontalAlignment="Left" Margin="100,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="16"><Run Language="pt-br" Text="Senha"/><LineBreak/><Run Language="pt-br"/></TextBlock>-->
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" Margin="115,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="38"><Run Language="pt-br" Text="SQL Server"/></TextBlock>
        <TextBlock Foreground="#f5f4f3" FontSize="18" FontWeight="Bold" Margin="343,105,147,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38"><Run Language="pt-br" Text="Oracle"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <Button Content="Salvar" Click="SalvarButton_Click" Foreground="#f5f4f3" BorderBrush="#2a353a" Background="#101e24" Margin="230,384,230,88">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#18262b"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#2a353a"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="390,373,0,111" TextWrapping="Wrap"><Run Language="pt-br" Text="Porta"/></TextBlock>
        <PasswordBox x:Name="SqlServerPassword" Background="#19262c" BorderThickness="1" BorderBrush="#2a353a" Foreground="#f5f4f3" FontSize="11" Margin="100,230,300,252">
            <PasswordBox.Style>
                <Style TargetType="{x:Type PasswordBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type PasswordBox}">
                                <Border Background="#19262c"  
                                        BorderBrush="#2a353a"  
                                        BorderThickness="1"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                            Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </PasswordBox.Style>
        </PasswordBox>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="100,205,0,271" TextWrapping="Wrap" Width="120"><Run Language="pt-br" Text="Senha"/><LineBreak/><Run Language="pt-br"/></TextBlock>
        <TextBox x:Name="oracleInstance"  Foreground="#f5f4f3" FontSize="11" Margin="300,295,100,187" Text="{Binding ServerOracleConnection.Instance}" Width="150">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border Background="#19262c"  
                                        BorderBrush="#2a353a"  
                                        BorderThickness="1"  
                                        CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                            Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="300,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"><Run Language="pt-br" Text="Instância"/></TextBlock>
        <TextBox x:Name="sqlServerUser" BorderThickness="1" Foreground="#f5f4f3" FontSize="11" Padding="1, 0" Margin="100,295,300,187" Text="{Binding ServerSQLServerConnection.Username}">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border Background="#19262c"  
                                    BorderBrush="#2a353a"  
                                    BorderThickness="1"  
                                    CornerRadius="4">
                                    <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="0" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBlock Foreground="#f5f4f3" HorizontalAlignment="Left" Margin="100,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="14"><Run Language="pt-br" Text="Usuário"/><LineBreak/><Run Language="pt-br"/></TextBlock>
    </Grid>
</Page>
