<Window x:Class="TrocaBaseGUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrocaBaseGUI"
        mc:Ignorable="d"
        Title="TrocaBase" Height="500" Width="550"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="#101e24" CornerRadius="20" BorderBrush="#2a353a" BorderThickness="1" Padding="6">
        <Frame x:Name="MainFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden" Background="#101e24" MouseDown="Border_MouseDown"/>
    </Border>
</Window>